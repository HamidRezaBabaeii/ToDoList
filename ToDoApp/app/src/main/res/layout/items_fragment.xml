<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <CheckBox
        android:id="@+id/checkbox_item_recyclerview_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5" />

    <TextView
        android:id="@+id/itemNamex_item_recyclerview_items"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:padding="15dp"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/btn_Edit_recyclerView_items"
        android:src="@drawable/ic_action_create_xhdpi"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@null"
        android:layout_weight="0.5"
        app:tint="@color/green" />

    <ImageButton
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="0.5"
        android:background="@null"
        app:srcCompat="@drawable/ic_action_delete_xhdpi"
        app:tint="@color/red_delete" />

</LinearLayout>